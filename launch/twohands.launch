<launch>
	<!-- LAUNCH INTERFACE -->
	<arg name="gui" default="true" />
	<arg name="robot_name" default="twohands"/>
	<arg name="use_rviz" default="true"/> 
	<arg name="use_joint_state_publisher" default="true"/> 
	<arg name="use_mimic_tag" default="true"/> <!-- the synergy is applied with pure kinematics -->

	<!-- LAUNCH IMPLEMENTATION -->
	<param name="robot_description" command="$(find xacro)/xacro $(find human_hand_description)/robot/$(arg robot_name).urdf.xacro use_mimic_tag:=$(arg use_mimic_tag)"/>
	<param name="use_gui" value="$(arg gui)"/>

	<group if="$(arg use_joint_state_publisher)">
		<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
	</group>

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/> 

	<group if="$(arg use_rviz)">
		<node name="my_rviz" pkg="rviz" type="rviz" respawn="false" args="-d $(find human_hand_description)/launch/display.rviz" output="screen"/>
	</group>
</launch>
